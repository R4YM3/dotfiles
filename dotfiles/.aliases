#!/usr/bin/env bash

alias vim="nvim"
alias vi="nvim"

# tmuxinator projects
alias dotfiles='tmuxinator start dotfiles'
alias rtl-account='tmuxinator start rtl-account'
alias vl_optimiser_nodejs='tmuxinator start vl_optimiser_nodejs'
alias rtlxl-frontend='tmuxinator start rtlxl-frontend'
alias rtlxl-frontend2='tmuxinator start rtlxl-frontend2'
alias rtlxl-top-bar='tmuxinator start rtlxl-top-bar'
alias rtlxl='tmuxinator start rtlxl'
alias tmux-config='tmuxinator start tmux'
alias vl_account='tmuxinator start vl_account'
alias vl_api='tmuxinator start vl_api'
alias vl_deployment='tmuxinator start vl_deployment'
alias vl_frontend='tmuxinator start vl_frontend'
alias vl_onboarding2='tmuxinator start vl_onboarding2'
alias vl_services='tmuxinator start vl_services'
alias vx_account_service='tmuxinator start vx_account_service'
alias vx_converted_user_service='tmuxinator start vx_converted_user_service'
alias vx_experimental_service='tmuxinator start vx_experimental_service'
alias vx_email_service='tmuxinator start vx_email_service'
alias vx_libs='tmuxinator start vx_libs'
alias varnish_test='tmuxinator start varnish_test'
alias varnish_acc='tmuxinator start varnish_acc'
alias varnish_prod='tmuxinator start varnish_prod'
alias hetwebbureau='tmuxinator start hetwebbureau'
alias cli='tmuxinator start cli'
alias cli_typescrypt='tmuxinator start cli-typescript'

alias base='tmuxinator start base'

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"

# Shortcuts
alias d="cd ~/Documents/Dropbox"
alias dv="cd ~/Development"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias g="git"
alias h="history"
alias j="jobs"
alias n="npm"

# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
    colorflag="--color"
    export LS_COLORS='no=00:fi=00:di=01;31:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'
else # macOS `ls`
    colorflag="-G"
    export LSCOLORS='BxBxhxDxfxhxhxhxhxcxcx'
fi

# Clear completly
alias clr="clear && printf '\e[3J']'"

# List all files colorized in long format
alias l="ls -lF ${colorflag}"

# List all files colorized in long format, including dot files
alias la="ls -laF ${colorflag}"

# List only directories
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"

# Always use color output for `ls`
alias ls="command ls ${colorflag}"

# Always enable colored `grep` output
# Note: `GREP_OPTIONS="--color=auto"` is deprecated, hence the alias usage.
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Get week number
alias week='date +%V'

# Stopwatch
alias timer='echo "Timer started. Stop with Ctrl-D." && date && time cat && date'

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

alias emptytrash="rm -rf ~/.local/share/Trash/*"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# Hide/show all desktop icons (useful when presenting)
alias hidedesktop="gsettings set org.gnome.desktop.background show-desktop-icons false"
alias showdesktop="gsettings set org.gnome.desktop.background show-desktop-icons true"

# Lock the screen (when going AFK)
alias afk="gnome-screensaver-command -l"
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

# Reload the shell (i.e. invoke as a login shell)
alias reload="exec $SHELL -l"

# Print each PATH entry on a separate line
alias path='echo -e ${PATH//:/\\n}'
